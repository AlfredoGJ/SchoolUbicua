<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolV.GruposPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="groupsList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombre}}" Detail="{Binding profesor}">

                        </TextCell>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

            

            <Button Text="Agregar" Clicked="GoEdit"
                BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="15"
                    Margin="30,0,30,0"
                
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>