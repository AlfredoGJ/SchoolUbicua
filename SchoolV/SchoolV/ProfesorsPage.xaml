<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolV.ProfesorsPage">
    <ContentPage.Content>
        <StackLayout>

            <ListView x:Name="profesorsList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullName}}" Detail="{Binding titulo}">

                        </TextCell>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

            <Button Text="Add" BackgroundColor="#2ed73a"
                    Clicked="GoEdit"
                    />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>